<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBFDD9">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/menuBook2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/foodImage2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="6dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/id1"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="@string/ingredient"
                android:textStyle="bold"
                android:layout_below="@+id/foodImage2"/>
            <TextView
                android:id="@+id/main_ingredients2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id1"/>

            <TextView
                android:id="@+id/id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/main_ingredients2"/>
            <TextView
                android:id="@+id/recipe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id2"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
